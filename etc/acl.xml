<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Boolfly_BannerSlider::config" title="Banner Slider Config Section"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::content">
                    <resource id="Boolfly_BannerSlider::manager" title="Banner Slider">
                        <resource id="Boolfly_BannerSlider::slider" title="Manage Slider"/>
                        <resource id="Boolfly_BannerSlider::banner" title="Manage Banner"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
